{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "main/*": ["main/*"]
    }
  },
  "include": ["src", "declaration.d.ts"],
  "exclude": ["node_modules"]
}
